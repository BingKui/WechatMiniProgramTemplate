/* 基础样式定义 */
@import './color.wxss';
@import './gap.wxss';
@import './flex.wxss';
@import './font.wxss';

/* bordr */
.border-radius-sm {
    border-radius: 6rpx;
}

.border-radius {
    border-radius: 12rpx;
}

.border-radius-md {
    border-radius: 18rpx;
}

.border-radius-lg {
    border-radius: 24rpx;
}

/* 文本省略 */
.text-overflow {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.overflow-line2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}